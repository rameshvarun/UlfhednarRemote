<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.varunramesh.ulfhednarremote.RemoteActivity"
    android:id="@+id/remote_frame">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content" /> -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/move" android:layout_width="fill_parent"
            android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
            android:background="#0099cc" android:layout_weight="10"
            android:textStyle="bold" android:textSize="50sp" android:gravity="center"
            android:text="Move" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent" android:layout_weight="10"
            android:layout_height="match_parent">

            <TextView android:id="@+id/empty_space" android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
                android:background="#000000" android:layout_weight="10"
                android:textStyle="bold" android:textSize="50sp" android:gravity="center" />

            <LinearLayout
                android:layout_weight="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:id="@+id/attack" android:layout_width="fill_parent"
                    android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#ffcc3c24"
                    android:background="#ffcc1600"
                    android:textStyle="bold" android:textSize="30sp" android:gravity="center"
                    android:layout_weight="10"
                    android:text="Attack" />

                <TextView android:id="@+id/special" android:layout_width="fill_parent"
                    android:layout_weight="10"
                    android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#ffc7cc50"
                    android:background="#ffdee500"
                    android:textStyle="bold" android:textSize="30sp" android:gravity="center"
                    android:text="Special" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
